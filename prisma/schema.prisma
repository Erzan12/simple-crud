datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String
  createdAt DateTime @default(now())

  //relation
  person    Person?
}

model Person {
  id            Int      @id @default(autoincrement())
  userId        Int      @unique
  name          String
  dateOfBirth   DateTime?
  age           Int?
  gender        String?
  address       String?
  phoneNumber   String?

  //relation
  user          User    @relation(fields: [userId], references: [id], onDelete: Cascade)  
}
